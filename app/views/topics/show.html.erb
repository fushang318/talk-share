<%- model_class = Topic -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title1) %>:</strong></dt>
  <dd><%= @topic.title1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title1_tag) %>:</strong></dt>
  <dd><%= @topic.title1_tag %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title2) %>:</strong></dt>
  <dd><%= @topic.title2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title2_tag) %>:</strong></dt>
  <dd><%= @topic.title2_tag %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @topic.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              topics_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_topic_path(@topic), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              topic_path(@topic),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
